<div class="dataTable_wrapper">
    {{#if (is-same view.contents.length 0)}}
    <div class="alert alert-danger text-center"><i class="fa fa-ban"></i> {{t 'no-results-found'}}</div>
    {{else}}
    <table class="table table-striped table-bordered table-hover" {{bind-attr id=view.tableId}} {{bind-attr data-resizable-columns-id=view.id}}>
        <thead>
            <tr>
                {{#each c in view.columns}}
                    {{#if c.visible}}
                <th  class="orderable"
                    {{bind-attr data-resizable-column-id=c.id}}
                    {{bind-attr style="c.width"}}
                    >
                    {{#if c.first}}
                        <div class="dropdown">
                            <a href="javascript:;" class="text-muted btn-xs pull-left dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
                                <i class="fa fa-cog"></i>
                            </a>
                            <form class="dropdown-menu table-options" aria-labelledby="dropdownMenu1">
                                <div class="col-md-12">
                                    <label>{{input type="checkbox" name="all" checked=view.allVisible}} Check/Uncheck All</label>
                                </div>
                                {{#each cOption in view.columnsVisibility}}
                                    <div class="col-md-12">
                                        <label>{{input type="checkbox" name=cOption.name checked=cOption.visible}} {{cOption.name}}</label>
                                    </div>
                                {{/each}}
                                <div class="col-md-12">
                                    <button type="button" {{action "applyTableOptions"}} class="btn btn-primary btn-xs">Apply</button>
                                    <button type="button" {{action "cancelTableOptions"}} class="btn btn-default btn-xs">Cancel</button>
                                </div>
                            </form>
                        </div>
                    {{/if}}
                    {{#if c.sortable}}
                        <a href="javascript:;" {{action "sort" c}}>
                            {{c.name}}
                            {{#if c.sortDesc}}
                                <i class="fa fa-sort-amount-desc"></i>
                            {{else}}
                                {{#if c.sortAsc}}
                                    <i class="fa fa-sort-amount-asc"></i>
                                {{/if }}
                            {{/if}}
                        </a>
                    {{else}}
                        {{c.name}}
                    {{/if}}
                </th>
                    {{/if}}
                {{/each}}
            </tr>
        </thead>
        <tbody>
        {{#each con in view.contents}}
            <tr class="odd gradeX">
            {{#each col in view.columns}}
                {{#if col.visible}}
                <td class="orderable">
                    {{grid-col column=col model=con}}
                </td>
                {{/if}}
            {{/each}}
            </tr>
        {{/each}}
        </tbody>
    </table>
    {{/if}}

    {{grid-pagination model=pagination paginate="paginate"}}
</div>